<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <item android:bottom="4dp">  <!-- Adjust the border thickness using bottom property -->
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorOnBackground" /> <!-- Change to your desired border color -->
        </shape>
    </item>
</layer-list>