<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvNGOSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NGO Sign Up"
            android:textSize="26sp"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <!-- Establishment Date -->
        <EditText
            android:id="@+id/etEstablishmentDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Establishment Date"
            android:textColor="#333333"
            android:textColorHint="#888888"
            android:inputType="date"
            android:padding="16dp"
            android:layout_marginTop="16dp" />

        <!-- NGO Name -->
        <EditText
            android:id="@+id/etNGOName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NGO Name"
            android:textColor="#333333"
            android:textColorHint="#888888"
            android:padding="16dp"
            android:layout_marginTop="16dp" />

        <!-- Address -->
        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:textColor="#333333"
            android:textColorHint="#888888"
            android:padding="16dp"
            android:layout_marginTop="16dp" />

        <!-- Website URL -->
        <EditText
            android:id="@+id/etWebsiteURL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Website URL (if any)"
            android:textColor="#333333"
            android:textColorHint="#888888"
            android:inputType="textWebEditText"
            android:padding="16dp"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnNGOSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="@color/black"
            android:backgroundTint="@color/primary"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
