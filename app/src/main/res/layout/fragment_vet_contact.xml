<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/vetContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Vet Profile Section -->
        <ImageView
            android:id="@+id/vetProfileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Vet Profile Picture"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/vetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Vet Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/vetSpecialty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Specialty"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/vetContactInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Contact Information"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/vetAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Address"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/vetServices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Services Offered"
            android:textSize="16sp" />

        <!-- New detailsContainer for dynamic visibility -->
        <LinearLayout
            android:id="@+id/detailsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="8dp">

            <!-- Add any additional details here that should appear in the details container -->

        </LinearLayout>

        <!-- Action Buttons -->
        <Button
            android:id="@+id/bookAppointmentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Book Appointment" />

        <Button
            android:id="@+id/callVetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Call Vet" />

        <!-- Reviews Section -->
        <TextView
            android:id="@+id/addReviewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="+ Add Review"
            android:textColor="#007BFF"
            android:textSize="16sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reviewRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:scrollbars="vertical" />

    </LinearLayout>
</ScrollView>
