<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organization Registration"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvorgIdreg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organization ID: Not Assigned"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>

        <!-- Organization Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Organization Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="4dp"/>
        <EditText
            android:id="@+id/orgName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Organization Name"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <!-- Contact Person Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Person"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"/>
        <EditText
            android:id="@+id/contactPerson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Contact Person Name"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <!-- Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <!-- Phone Number -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"/>
        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Phone Number"
            android:inputType="phone"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <!-- Address -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"/>
        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Address"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <!-- Registration Number -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registration Number"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"/>
        <EditText
            android:id="@+id/regNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Registration Number"
            android:inputType="text"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <!-- Website -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Website"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"/>
        <EditText
            android:id="@+id/website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Website URL"
            android:inputType="textUri"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"/>
        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Enter Organization Description"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="top"
            android:minLines="4"/>

        <!-- Register Button -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:backgroundTint="#BBD4F6"
            android:textColor="#000000"
            android:layout_marginTop="16dp"/>

        <ProgressBar
            android:id="@+id/organizationProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>
